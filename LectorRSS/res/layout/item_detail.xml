    	android:layout_height="130dp"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:paddingTop="20dp"/>
    -->

    <WebView
        android:id="@+id/html"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
